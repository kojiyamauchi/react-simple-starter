    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.2"
  },
  "babel": {
    "presets": [
      ["@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "modules": false,
          "corejs": 3
        }
      ],
      ["@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-modules-commonjs",
      "react-hot-loader/babel",
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "resource/**/!(*.min).{ts,tsx,js,jsx}": ["prettier --write", "eslint --fix --max-warnings 0", "stylelint"],
    "webpack/*.js": "prettier --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/resource/apps/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/resource/tests/**/*.test.+(ts|tsx|js|jsx)"
    ]
  },
  "scripts": {
    "setup": "rm -rf .git",
    "dev": "webpack serve --inline --hot --config webpack/webpack.dev.babel.js --mode development",
    "build": "webpack --config webpack/webpack.pro.babel.js --mode production",
    "clean": "rm delivery/index.html && rm -rf delivery/js && rm -rf delivery/materials",
    "jest": "jest --passWithNoTests",
    "check-pkg": "ncu",
    "update-pkg": "ncu '/^(?!(styled-components|@add-module-name)).*$/' -u",
    "re-install": "rm yarn.lock && rm -rf node_modules && yarn install"
  }
}
